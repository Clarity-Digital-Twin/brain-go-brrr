[run]
source = brain_go_brrr
branch = False
parallel = False
omit = 
    */tests/*
    */__init__.py
    */__main__.py
    # Skip MNE-importing modules to prevent hangs
    */services/yasa_adapter*.py
    */core/edf_loader.py
    */core/sleep.py
    */api/routers/sleep.py
    # Skip heavy integration modules
    */models/eegpt_architecture.py
    */data/tuab_enhanced_dataset.py

[report]
precision = 2
show_missing = True
skip_covered = True
sort = Cover
exclude_lines =
    # Have to re-enable the standard pragma
    pragma: no cover
    
    # Don't complain about missing debug-only code:
    def __repr__
    if self\.debug
    
    # Don't complain if tests don't hit defensive assertion code:
    raise AssertionError
    raise NotImplementedError
    
    # Don't complain if non-runnable code isn't run:
    if 0:
    if __name__ == .__main__.:
    if TYPE_CHECKING:
    
    # Don't complain about abstract methods
    @(abc\.)?abstractmethod
    
    # Ignore type checking imports
    from typing import TYPE_CHECKING
    if TYPE_CHECKING:

[html]
directory = htmlcov

[xml]
output = coverage.xml